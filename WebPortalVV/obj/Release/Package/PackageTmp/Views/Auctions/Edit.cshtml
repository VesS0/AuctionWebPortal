@model WebPortalVV.Models.Auction

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm("Edit", "Auctions", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Auction</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.idAuction)

        <div class="form-group">
            @Html.LabelFor(model => model.product.productName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.product.productName, new { @class = "form-control", @id = "disabledInput", @readonly = "readonly" })
            </div>
        </div>


        <div class="form-group">
        @Html.LabelFor(model => model.secondsLasting, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.secondsLasting, new { @class = "form-control", @id = "disabledInput", @readonly = "readonly" })
        </div>
     </div>

        <div class="form-group">
            @Html.LabelFor(model => model.timeCreated, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.timeCreated, new { @class = "form-control", @id = "disabledInput", @readonly = "readonly" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.startingPrice, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @{
                    var modell = Model.idAuction;
                }
                @Html.TextBoxFor(model => model.startingPrice, new { @class = "form-control", @id = "disabledInput", @readonly = "readonly" })
                [ 
                @Html.ActionLink("Change price", "ChangePrice",
               routeValues: new { startingPrice = Model.startingPrice, idAuction = Model.idAuction } )
                ]
            </div>
        </div>

        @Html.HiddenFor(model => model.totalPriceIncrease)

        <div class="form-group">
            @Html.LabelFor(model => model.product.image, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @HtmlImage.showimage(Model.product.image)
                @Html.HiddenFor(model => model.product.image)
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Auctions")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
